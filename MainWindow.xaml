<Window x:Class="Autoclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoclicker"
        mc:Ignorable="d"
        Title="AutoClicker" Height="400" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Icon="Resources/icon.ico">
<Window.Resources>
        <Style x:Key="MenuStyle" TargetType="Menu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#E1E1E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Menu Bar -->
        <Menu x:Name="MainMenu" DockPanel.Dock="Top" Style="{StaticResource MenuStyle}">
            <MenuItem x:Name="FileMenuItem" Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Toggle Theme" Click="ToggleTheme_Click" Style="{StaticResource MenuItemStyle}"/>
                <Separator/>
                <MenuItem Header="_Close" InputGestureText="Alt+F4" Click="Close_Click" Style="{StaticResource MenuItemStyle}"/>
            </MenuItem>
            <MenuItem x:Name="SettingsMenuItem" Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Toggle Theme" Click="ToggleTheme_Click" Style="{StaticResource MenuItemStyle}"/>
                <MenuItem Header="_Set Hotkey..." Click="SetHotkey_Click" Style="{StaticResource MenuItemStyle}"/>
            </MenuItem>
            <MenuItem x:Name="AboutMenuItem" Header="_About" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About AutoClicker" Click="About_Click" Style="{StaticResource MenuItemStyle}"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Mouse Button Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Mouse Button:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="MouseButtonComboBox" Width="200" SelectedIndex="0">
                <ComboBoxItem Content="Left Click"/>
                <ComboBoxItem Content="Right Click"/>
                <ComboBoxItem Content="Middle Click"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Click Type Selection -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="Click Type:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="ClickTypeComboBox" Width="200" SelectedIndex="0">
                <ComboBoxItem Content="Single Click"/>
                <ComboBoxItem Content="Double Click"/>
            </ComboBox>
        </StackPanel>
        
        <!-- CPS Input -->
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Content="CPS (1-1000):" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="CpsTextBox" Width="200" Text="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        
        <!-- Start/Stop Button -->
        <Button x:Name="StartStopButton" Grid.Row="6" Content="Start" Width="120" Height="40" 
                FontSize="16" FontWeight="Bold" Click="StartStopButton_Click"
                Background="#4CAF50" Foreground="White" BorderThickness="0"/>
        
        <!-- Status -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Status:" FontWeight="Bold"/>
            <Label x:Name="StatusLabel" Content="Stopped" Foreground="Red"/>
        </StackPanel>
        
        <!-- Hotkey Status -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Hotkey:" FontWeight="Bold"/>
            <Label x:Name="HotkeyLabel" Content="Not bound" Foreground="Gray"/>
        </StackPanel>
        
        </Grid>
    </DockPanel>
</Window>
